@model IEnumerable<GestaoDeAgenda.Models.Event>

@{
    ViewData["Title"] = "Home Page";
    ViewData["Today"] = DateTime.Today.ToString("yyyy-MM-dd"); //DateTime.Now.Date.ToShortDateString();
    // Layout = "~/Views/Shared/_Login.cshtml";
}
<div class="container">
    <div class="row justify-content-center mt-3">
        @if (@ViewBag.UserId != null)
        {
            <div class="col-md-12">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#eventTypeOne" type="button" role="tab" aria-controls="home" aria-selected="true">Eventos em andamento</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#eventTypeTwo" type="button" role="tab" aria-controls="profile" aria-selected="false">Próximos eventos</button>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="eventTypeOne" role="tabpanel" aria-labelledby="home-tab">
                        <div class="p-2">
                            <ol class="list-group list-group-numbered">
                                @{
                                    foreach (var item in Model)
                                    {
                                        DateTime date1 = DateTime.Parse(item.Date);
                                        DateTime date2 = DateTime.Now;  //Moment
                                        if (date1 <= date2)
                                        {
                                            <li class="list-group-item d-flex justify-content-between align-items-start">
                                                <div class="ms-2 me-auto">
                                                    <div class="fw-bold">@(item.Type == 1 ? "Exclusivo" : "Compartilhado")</div>
                                                    @Html.DisplayFor(modelItem => item.Name)
                                                <span>
                                                    @Html.DisplayFor(modelItem => item.Description)
                                                </span>
                                                </div>
                                                <span class="badge bg-primary rounded-pill">@Html.DisplayFor(modelItem => item.Date)</span>
                                            </li>
                                        }

                                    }
                                }
                            </ol>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="eventTypeTwo" role="tabpanel" aria-labelledby="profile-tab">
                        <div class="p-2">
                            <ol class="list-group list-group-numbered">
                                @{
                                    foreach (var item in Model)
                                    {
                                        DateTime date1 = DateTime.Parse(item.Date);
                                        DateTime date2 = DateTime.Now;  //Moment
                                        if (date1 > date2)
                                        {
                                            <li class="list-group-item d-flex justify-content-between align-items-start">
                                                <div class="ms-2 me-auto">
                                                    <div class="fw-bold">@(item.Type == 1 ? "Exclusivo" : "Compartilhado")</div>
                                                    @Html.DisplayFor(modelItem => item.Name)
                                                <span>@Html.DisplayFor(modelItem => item.Description)</span>
                                                </div>
                                                <span class="badge bg-primary rounded-pill">@Html.DisplayFor(modelItem => item.Date)</span>
                                            </li>
                                        }

                                    }
                                }
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-12 mt-5">
                <div class="card">
                    <p>Name: @ViewBag.Name</p>
                    <p>Email: @ViewBag.Email</p>
                    <p>UserId: @ViewBag.UserId </p>
                </div>
            </div>
        }
        </div>
</div>